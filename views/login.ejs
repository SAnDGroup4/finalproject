<!doctype html>
<html lang="en" ng-app="myApp">
    <head>
		<style>
		.button
		{
			align: center;
			text-align: center;
			font-size: 30px;
		}
		</style>
    </head>
    <body>
    <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
    <script type="text/javascript">
		var url = '';
		var w = '';
		$(document).ready(function() { 
			$.get('/glogin', function(data) {
				url = data;
			});
			var interval = window.setInterval((function() {
			 	if (w.closed) {
			 		window.clearInterval(interval);
			 		window.location = '/user';
			 	}
			 }),1000);
		});
	</script>
    </head>
    <body>
		<div class="button" onclick="w = window.open(url, 'window', 'status=0,menubar=0,resizable=1,width=500,height=500;')">
			Login to Google
		</div>
	</body>
</html>